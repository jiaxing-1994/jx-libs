{
  "compilerOptions": {
    "composite": true,
    "target": "es2015",
    "lib": ["es2015", "DOM.Iterable", "DOM"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": [
    "dist/*.js"
  ]
}
