{
  "compilerOptions": {
    "composite": true,
    "target": "es2015",
    "lib": ["esnext", "dom", "DOM.Iterable", "es2015"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": [
    "dist"
  ]
}
